//Given a number N
//        . Print the summation of the numbers that is between 1 and N
//        (inclusive).
//
//        .∑i=1Ni
//        Input
//        Only one line containing a number N
//        (1≤N≤109)
//        Output
//        Print the summation of the numbers that are between 1 and N
//        (inclusive).
#include<iostream>
#include<iomanip>
using namespace std;
int main ()
{
    unsigned long long num;
    unsigned long long sum;
    cin>>num;

    sum = (num*(num+1))/2;
    cout<<sum;
}
