#include<bits/stdc++.h>
using namespace std;
int main ()
{
	int n;
	cin>>n;
	int count = 0;
	int countt=0;
	int a[n];
	for(int i = 0;i<n;i++)
	{
		cin>>a[i];
	}
	//sort(a,a+n);
	for(int i = 0;i<n;i++)
	{
		if(a[i]==(a[n-i-1]))
		{
			count++;
		}
		else
		{
			countt++;
		}
	}
	if(count==n)
	{
		cout<<"YES";
	}
	else
	{
		cout<<"NO";
	}
	

}